generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id              String   @id @default(uuid())
  name            String
  baseDescription String
  personaConfig   String?
  postingEnabled  Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  contextLayers    ContextLayer[]
  postSuggestions PostSuggestion[]
  posts           Post[]

  @@index([name])
  @@index([postingEnabled])
  @@map("projects")
}

model ContextLayer {
  id          String   @id @default(uuid())
  projectId   String
  version     Int
  content     String
  metadata    String?
  status      String   @default("pending")
  approvedBy  BigInt?
  approvedAt  DateTime?
  createdAt   DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  postSuggestions PostSuggestion[]
  posts           Post[]

  @@unique([projectId, version])
  @@index([status])
  @@index([createdAt])
  @@map("context_layers")
}

model PostSuggestion {
  id             String   @id @default(uuid())
  projectId      String
  contextVersion Int
  content        String
  variants       String?
  metadata       String?
  status         String   @default("pending")
  approvedBy     BigInt?
  createdAt      DateTime @default(now())
  approvedAt     DateTime?

  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contextLayer  ContextLayer @relation(fields: [projectId, contextVersion], references: [projectId, version])
  posts         Post[]

  @@index([projectId, status])
  @@index([createdAt])
  @@map("post_suggestions")
}

model Post {
  id             String   @id @default(uuid())
  projectId      String
  contextVersion Int
  suggestionId   String?
  xTweetId       String?  @unique
  content        String
  status         String   @default("posted")
  postedAt       DateTime?
  createdAt      DateTime @default(now())

  project      Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  contextLayer ContextLayer  @relation(fields: [projectId, contextVersion], references: [projectId, version])
  suggestion   PostSuggestion? @relation(fields: [suggestionId], references: [id], onDelete: SetNull)

  @@index([projectId, postedAt])
  @@index([status])
  @@map("posts")
}

model Admin {
  telegramUserId BigInt  @id
  username       String?
  role           String  @default("admin")
  isActive       Boolean @default(true)
  createdAt      DateTime @default(now())

  auditLogs       AuditLog[]

  @@index([role])
  @@index([isActive])
  @@map("admins")
}


model AuditLog {
  id           String   @id @default(uuid())
  adminId      BigInt
  actionType   String
  actionData   String?
  resourceType String?
  resourceId   String?
  createdAt    DateTime @default(now())

  admin Admin @relation(fields: [adminId], references: [telegramUserId])

  @@index([adminId, createdAt])
  @@index([resourceType, resourceId])
  @@index([actionType])
  @@index([createdAt])
  @@map("audit_logs")
}
